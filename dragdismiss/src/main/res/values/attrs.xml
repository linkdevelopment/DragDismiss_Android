<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--TODO: Add documentation for attrs-->
    <declare-styleable name="DragDismissLayout">
        <!-- The percentage of the screen that the view will be dismissed if dragged across it -->
        <attr name="dragDismissDistanceFraction" format="fraction|reference" />

        <!-- The velocity in Pixels/second that the view will be dismissed if flanged above it.
        The higher the level the higher the speed required to dismiss -->
        <attr name="dragDismissVelocityLevel">
            <enum name="level_1" value="1000" />
            <enum name="level_2" value="2000" />
            <enum name="level_3" value="3000" />
            <enum name="level_4" value="4000" />
            <enum name="level_5" value="5000" />
        </attr>

        <!-- Sets the alpha of the black Background while the view is dragged -->
        <attr name="backgroundAlpha" format="integer|reference" />

        <!-- Sets if the view is dragged only using the view's edges -->
        <attr name="shouldDragEdgeOnly" format="boolean|reference" />

        <!-- Sets the directions that the view is dismissed if dragged from -->
        <attr name="draggingDirections">
            <flag name="all" value="15" />
            <flag name="fromTop" value="1" />
            <flag name="fromRight" value="2" />
            <flag name="fromBottom" value="4" />
            <flag name="fromLeft" value="8" />
        </attr>
    </declare-styleable>
</resources>
